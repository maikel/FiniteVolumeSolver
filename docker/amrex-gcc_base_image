ARG UBUNTU_VERSION
FROM ubuntu:$UBUNTU_VERSION

ARG CI_JOB_TOKEN
ENV CI_JOB_TOKEN ${CI_JOB_TOKEN}

ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get update \
  && apt-get --yes dist-upgrade \
  && apt-get install --yes gfortran python3-pip wget libpthread-stubs0-dev git libopenmpi-dev m4 \
  && pip3 install conan

# Install latest CMake files from the internet
RUN wget https://github.com/Kitware/CMake/releases/download/v3.14.2/cmake-3.14.2-Linux-x86_64.tar.gz \
    && tar xzf cmake-3.14.2-Linux-x86_64.tar.gz && rm cmake-3.14.2-Linux-x86_64.tar.gz \
    && cp -r cmake-3.14.2-Linux-x86_64/* /usr/ && rm -r cmake-3.14.2-Linux-x86_64/

ARG GCC_VERSION
RUN conan remote add finite-volume https://api.bintray.com/conan/fub-agklein/finite-volume \
 && conan remote add gitlab https://git.imp.fu-berlin.de/api/v4/packages/conan \
 && conan profile new linux-gcc --detect \
 && conan profile update settings.compiler=gcc linux-gcc \
 && conan profile update settings.compiler.version=${GCC_VERSION} linux-gcc \
 && conan profile update settings.compiler.libcxx=libstdc++11 linux-gcc \
 && conan profile update settings.compiler.cppstd=11 linux-gcc \
 && conan user ci_user -r gitlab -p ${CI_JOB_TOKEN}

RUN conan install boost/1.71.0@conan/stable --profile linux-gcc --build missing \
 && conan install eigen/3.3.7@conan/stable --profile linux-gcc --build missing \
 && conan install pybind11/2.3.0@conan/stable --profile linux-gcc --build missing \
 && conan install fmt/5.3.0@bincrafters/stable --profile linux-gcc --build missing
